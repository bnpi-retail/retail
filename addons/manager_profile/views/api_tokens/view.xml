<odoo>
    <data>

        <!-- Form -->
        <record id="view_manager_profile_api_tokens_form" model="ir.ui.view">
            <field name="name">API токен</field>
            <field name="model">parser.api_tokens</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="worker" />
                        <field name="will_expire" />
                        <field name="token" />
                    </group>
                    <field name="download_link" widget="url" readonly="1" nolabel="1" text="Скачать актуальную версию Chrome Extension"/>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_manager_profile_api_tokens_tree" model="ir.ui.view">
            <field name="name">API токены</field>
            <field name="model">parser.api_tokens</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="worker" />
                    <field name="will_expire" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_parser_api_tokens">
            <field name="name">API токен</field>
            <field name="res_model">parser.api_tokens</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.server" id="action_get_api_tokens">
            <field name="name">Сгенерировать API ключ</field>
            <field name="model_id" ref="model_parser_api_tokens" />
            <field name="binding_model_id" ref="model_parser_api_tokens" />
            <field name="state">code</field>
            <field name="code">
                records.actions_get_api_token()
            </field>
        </record>

        <!-- Menu -->
        <menuitem name="API токены"
            id="menu_parser_api_tokens"
            parent="manager_profile.menu_root"
            action="action_parser_api_tokens"
            sequence="25" />

    </data>
</odoo>