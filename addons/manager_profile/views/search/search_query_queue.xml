        <field name="res_model">parser.search_query_queue</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem name="Очередь поисковых запросов" 
      id="parser_search_query_queue"
      parent="manager_profile.menu_root"
      action="action_parser_search_query_queue"
