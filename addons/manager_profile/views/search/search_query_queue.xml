    <!-- Tree -->
    <record id="view_parser_search_query_queue_tree" model="ir.ui.view">
        <field name="name">Очередь поисковых запросов</field>
        <field name="model">parser.search_query_queue</field>
        <field name="arch" type="xml">
            <tree>
                <field name="query"/>
