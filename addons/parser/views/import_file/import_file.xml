<odoo>
  <data>

    <!-- Form -->
    <record id="view_parser_import_file_form" model="ir.ui.view">
        <field name="name">Импорт</field>
        <field name="model">parser.import_file</field>
        <field name="arch" type="xml">
            <form>
                <group string="Наполнить стандартными данными">
                    <field name="data_for_download" />
                </group>
                <group string="Загрузить данные">
                    <field name="file" />
                </group>
            </form>
        </field>
    </record>

    <!-- Tree -->
    <record id="view_parser_import_file_tree" model="ir.ui.view">
        <field name="name">Импорт файлов</field>
        <field name="model">parser.import_file</field>
        <field name="arch" type="xml">
            <tree>
                <field name="timestamp" width="300" />
                <field name="data_for_download" width="300" />
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record model="ir.actions.act_window" id="action_parser_import_file">
        <field name="name">Импорт файлов</field>
        <field name="res_model">parser.import_file</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem name="Импорт файлов" 
      id="parser_import_file_button"
      parent="parser.menu_root"
      action="action_parser_import_file"
      sequence="100"/>

  </data>
</odoo>