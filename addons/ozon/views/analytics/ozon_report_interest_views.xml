<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ozon_report_interest_view_form" model="ir.ui.view">
            <field name="name">ozon_report_interest.form</field>
            <field name="model">ozon.report.interest</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <sheet>
                        <group>
                            <group string="Первый период">
                                <label for="first_period_from" string="Даты"/>
                                <div class="o_row">
                                    <field name="first_period_from" widget="daterange"
                                           class="oe_inline"
                                           options="{'related_end_date': 'first_period_to'}"
                                           nolable="1"
                                    />
                                    <i class="fa fa-long-arrow-right mx-2"
                                       aria-label="Arrow icon" title="To"/>
                                    <field name="first_period_to" widget="daterange"
                                           class="oe_inline"
                                           options="{'related_start_date': 'first_period_from'}"
                                           nolable="1"
                                    />
                                </div>
                            </group>
                            <group string="Пороговые значения">
                                <group>
                                    <field name="threshold_growth"
                                           string="Пороговое значение для темпов роста"
                                        help="Продукты выше этого значения будут либо звездами, либо проблемами."
                                    />
                                </group>
                                <group>
                                    <field name="threshold_share"
                                        string="Пороговое значение для вклада"
                                        help="Продукты выше этого значения будут либо звездами, либо дойными коровами."
                                    />
                                </group>
                            </group>
                            <group string="Второй период">
                                <label for="second_period_from" string="Даты"/>
                                <div class="o_row">
                                    <field name="second_period_from" widget="daterange"
                                           class="oe_inline"
                                           options="{'related_end_date': 'second_period_to'}"
                                           nolable="1"
                                    />
                                    <i class="fa fa-long-arrow-right mx-2"
                                       aria-label="Arrow icon" title="To"/>
                                    <field name="second_period_to" widget="daterange"
                                           class="oe_inline"
                                           options="{'related_start_date': 'second_period_from'}"
                                           nolable="1"
                                    />
                                </div>
                                <field name="ozon_categories_id" string="Категория" />
                            </group>

                            <notebook>
                                <page string="Данные по продуктам">
                                    <field name="ozon_report_interest_data_ids">
                                        <tree default_order="is_match, bcg_group"
                                            decoration-danger="is_match=='a'"
                                            decoration-success="is_match=='b'"
                                        >
                                            <field name="ozon_products_id" string="Продукт"
                                                help="Наименование продукта" readonly="1"
                                            />
                                            <!--                                            <field name="fp_hits_view" string="Просмотры период
                                            1"/>-->
                                            <!--                                            <field name="sp_hits_view" string="Просмотры период
                                            2"/>-->
                                            <!--                                            <field name="fp_qty" string="Количество продаж
                                            1"/>-->
                                            <!--                                            <field name="sp_qty" string="Количество продаж
                                            2"/>-->
                                            <field name="fp_share" readonly="1"
                                                string="%, Просмотр/день период 1" />
                                            <field name="sp_share" readonly="1"
                                                string="%, Просмотр/день период 2" />
                                            <field name="product_growth_rate" readonly="1"
                                                string="%, Рост по отношению к периоду 1" />
                                            <field name="interest_group" readonly="1"
                                                string="Группа: Доля Интереса"
                                                decoration-info="interest_group=='a'"
                                                decoration-success="interest_group=='b'"
                                                decoration-warning="interest_group=='c'"
                                                decoration-danger="interest_group=='d'"
                                            />
                                            <field name="bcg_group" readonly="1"
                                                string="Группа: Доля Рынка"
                                                decoration-info="bcg_group=='a'"
                                                decoration-success="bcg_group=='b'"
                                                decoration-warning="bcg_group=='c'"
                                                decoration-danger="bcg_group=='d'"
                                            />
                                            <field name="is_match" readonly="1"
                                                string="Совпадение"
                                            />
                                        </tree>
                                    </field>
                                </page>
                                <page string="Данные по периодам">
                                    <group>
                                        <field name="fp_revenue_per_hit_view_per_day" readonly="1"
                                            string="Выручка/просмотр/день за первый период" />
                                        <field name="sp_revenue_per_hit_view_per_day" readonly="1"
                                            string="Выручка/просмотр/день за второй период" />
                                        <field name="fp_qty_per_hit_view_per_day" readonly="1"
                                            string="Прождажи/просмотр/день за первый период" />
                                        <field name="sp_qty_per_hit_view_per_day" readonly="1"
                                            string="Продажи/просмотр/день за второй период" />
                                        <field name="fp_to_cart_per_hit_view_per_day" readonly="1"
                                            string="Добавления в корзину/просмотр/день за первый период" />
                                        <field name="sp_to_cart_per_hit_view_per_day" readonly="1"
                                            string="Добавления в корзину/просмотр/день за второй период" />
                                    </group>
                                </page>
                                <page string="Графические данные">
                                    <field name="plot" widget="image" />
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_report_interest_view_tree" model="ir.ui.view">
            <field name="name">ozon_report_interest.tree</field>
            <field name="model">ozon.report.interest</field>
            <field name="arch" type="xml">
                <tree string="Отчеты" default_order="create_date desc">
                    <field name="create_date" string="Дата создания" readonly="1" />
                    <field name="ozon_categories_id" string="Категория" readonly="1" />
                    <field name="first_period_from" string="Первый период с" readonly="1" />
                    <field name="first_period_to" string="по" readonly="1" />

                    <field name="second_period_from" string="Второй период с" readonly="1" />
                    <field name="second_period_to" string="по" readonly="1" />
                </tree>
            </field>
        </record>


        <record model="ir.actions.server" id="action_calculate_interest_report">
            <field name="name">Рассчитать</field>
            <field name="model_id" ref="model_ozon_report_interest" />
            <field name="binding_model_id" ref="model_ozon_report_interest" />
            <field name="state">code</field>
            <field name="code">
                action = records.action_calculate_interest_report()
            </field>
        </record>

        <record id="action_open_ozon_report_interest" model="ir.actions.act_window">
            <field name="name">Отчеты по интересу к продуктам</field>
            <field name="res_model">ozon.report.interest</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_ozon_report_interest" name="Отчеты по интересу к продуктам"
            parent="main_menu_analytics"
            action="action_open_ozon_report_interest" sequence="40" />

    </data>
</odoo>