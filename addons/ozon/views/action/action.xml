<odoo>
    <data>
        <!-- Form -->
        <record id="view_action_form" model="ir.ui.view">
            <field name="name">Акции</field>
            <field name="model">ozon.action</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="a_id" />
                        <field name="name" />
                        <field name="with_targeting" />
                        <field name="is_participating" />
                        <field name="datetime_start" />
                        <field name="datetime_end" />
                        <field name="status" widget="badge"
                            decoration-success="status=='started'"
                            decoration-muted="status=='not_started'"
                            decoration-info="status=='ended'"
                        />
                        <field name="description" />
                        <field name="action_type" />
                        <field name="discount_type" />
                        <field name="discount_value" />
                        <field name="potential_products_count" />
                        <field name="participating_products_count" />
                        <field name="ids_on_platform" />
                    </group>
                    <notebook>
                        <page id="page_action_candidates" string="Кандидаты">
                            <field name="action_candidate_ids">
                                <tree>
                                    <field name="product_id" />
                                    <field name="is_participating" />
                                    <field name="price" />
                                    <field name="max_action_price" />
                                </tree>
                            </field>
                        </page>
                        <page id="page_action_participants" string="Участники">
                            <field name="action_participants_ids">
                                <tree>
                                    <field name="product_id" />
                                    <field name="is_participating" />
                                    <field name="price" />
                                    <field name="max_action_price" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_action_tree" model="ir.ui.view">
            <field name="name">Акции</field>
            <field name="model">ozon.action</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="a_id" />
                    <field name="name" />
                    <field name="with_targeting" />
                    <field name="is_participating" />
                    <field name="datetime_start" />
                    <field name="datetime_end" />
                    <field name="status" widget="badge"
                        decoration-success="status=='started'"
                        decoration-muted="status=='not_started'"
                        decoration-info="status=='ended'" />
                    <field name="potential_products_count" />
                    <field name="participating_products_count" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_ozon_action">
            <field name="name">Акции</field>
            <field name="res_model">ozon.action</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.server" id="action_add_products_to_action">
            <field name="name">Добавить товары в акцию</field>
            <field name="model_id" ref="model_ozon_action" />
            <field name="binding_model_id" ref="model_ozon_action" />
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                action = records.get_action_add_products_to_action()
            </field>
        </record>


        <!-- Menu -->
        <menuitem name="Акции"
            id="menu_action"
            parent="ozon.menu_root"
            action="action_ozon_action"
            sequence="39" />

    </data>
</odoo>