<odoo>
    <data>

        <!-- Form -->
        <record id="view_action_analysis_data_form" model="ir.ui.view">
            <field name="name">Интерес к продуктам</field>
            <field name="model">ozon.analysis_data</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date"/>
                        <field name="product"/>
                        <field name="hits_view"/>
                        <field name="hits_tocart"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_action_analysis_data" model="ir.ui.view">
            <field name="name">Интерес к продуктам</field>
            <field name="model">ozon.analysis_data</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="product"/>
                    <field name="hits_view"/>
                    <field name="hits_tocart"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_analysis_data">
            <field name="name">Интерес к продуктам</field>
            <field name="res_model">ozon.analysis_data</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Интерес к продуктам"
            id="menu_analysis_data" 
            parent="main_menu_products" 
            action="action_analysis_data" 
            sequence="20"/>

    </data>
</odoo>