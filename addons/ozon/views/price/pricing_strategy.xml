<odoo>
    <data>

        <!-- Form -->
        <record id="view_ozon_pricing_strategy_form" model="ir.ui.view">
            <field name="name">Стратегия назначения цен</field>
            <field name="model">ozon.pricing_strategy</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="strategy_id" attrs="{'readonly': [('id','!=',False)]}" />
                        <button type="object" name="create_if_not_exists"
                            string="Заполнить стратегии"
                            class="btn-outline-primary"
                        />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_pricing_strategy_tree" model="ir.ui.view">
            <field name="name">Стратегия назначения цен</field>
            <field name="model">ozon.pricing_strategy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>

        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_pricing_strategy">
            <field name="name">Стратегии назначения цен</field>
            <field name="res_model">ozon.pricing_strategy</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menu -->
        <menuitem name="Стратегии назначения цен"
            id="menu_pricing_strategy"
            parent="menu_price"
            action="action_pricing_strategy"
            sequence="41" />


    </data>

</odoo>