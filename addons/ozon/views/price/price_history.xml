<odoo>
    <data>

        <!-- Graph -->
        <record id="view_price_price_history_graph" model="ir.ui.view">
            <field name="name">История цены</field>
            <field name="model">ozon.price_history</field>
            <field name="arch" type="xml">
                <graph string="История цен" type="line">
                    <field name="price" type="measure"/>
                    <field interval="day" name="timestamp" type="datetime"/>
                </graph>
            </field>
        </record>

        <!-- Form -->
        <record id="view_price_history_form" model="ir.ui.view">
            <field name="name">История цены</field>
            <field name="model">ozon.price_history</field>
            <field name="arch" type="xml">
                <form>

                    <group>
                        <field name="timestamp" />
                        <field name="product" />
                        <field name="provider" />
                    </group>
                    <group string='Цены'>
                        <field name="price" />
                        <field name="previous_price" />
                    </group>
                    <group string="Фиксированные затраты максимальные">
                        <field name="fix_expenses">
                            <tree>
                                <field name="name" />
                                <field name="price" />
                            </tree>
                        </field>
                        <field name="total_cost_fix" />
                    </group>
                    <group string="Процент от продаж">
                        <field name="costs" widget="many2many_pills">
                            <tree>
                                <field name="name" />
                                <field name="discription" />
                                <field name="price" />
                            </tree>
                        </field>
                        <field name="total_cost_percent" />
                    </group>

                    <group string='Прибыль'>
                        <field name="profit" />
                        <field name="profit_ideal" />
                        <field name="profit_delta" />
                    </group>

                    <group string='Информация о ценах'>
                        <field name="competitors" />
                    </group>

                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_price_history_tree" model="ir.ui.view">
            <field name="name">История цены</field>
            <field name="model">ozon.price_history</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="timestamp" />
                    <field name="product" />
                    <field name="provider" />
                    <field name="price" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_price_history">
            <field name="name">История цен</field>
            <field name="res_model">ozon.price_history</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{"graph_mode": "line", "measure": "profit"}</field>
        </record>

        <!-- Menu -->
        <menuitem name="История цен"
            id="menu_price_history"
            parent="menu_price"
            action="action_price_history"
            sequence="40" />

    </data>
</odoo>