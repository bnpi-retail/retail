<odoo>
    <data>

        <!-- Form -->
        <record id="view_ozon_mass_pricing_form" model="ir.ui.view">
            <field name="name">Массовое назначение цен</field>
            <field name="model">ozon.mass_pricing</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="status" />
                        <field name="product" />
                        <field name="price" />
                        <field name="new_price" />
                        <field name="comment" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_mass_pricing_tree" model="ir.ui.view">
            <field name="name">Очередь изменения цен</field>
            <field name="model">ozon.mass_pricing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product" />
                    <field name="price" />
                    <field name="new_price" />
                    <field name="comment" />
                    <field name="status" />
                </tree>
            </field>

        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_mass_pricing">
            <field name="name">Очередь изменения цен</field>
            <field name="res_model">ozon.mass_pricing</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <record model="ir.actions.act_window" id="action_mass_pricing_aaa">
            <field name="name">Массовое назначение цен</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ozon.mass_pricing</field>
            <field name="domain">[]</field>

            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ozon_mass_pricing_form" />
            <field name="binding_model_id" ref="model_ozon_mass_pricing" />
        </record> -->
        <record model="ir.actions.server" id="action_mass_pricing_update_prices_in_ozon">
            <field name="name">Назначить цены в Ozon</field>
            <field name="model_id" ref="model_ozon_mass_pricing" />
            <field name="binding_model_id" ref="model_ozon_mass_pricing" />
            <field name="state">code</field>
            <field name="code">
                records.update_price_in_ozon()
            </field>
        </record>

        <!-- Menu -->
        <menuitem name="Очередь изменения цен"
            id="menu_mass_pricing"
            parent="menu_price"
            action="action_mass_pricing"
            sequence="40" />


    </data>

</odoo>