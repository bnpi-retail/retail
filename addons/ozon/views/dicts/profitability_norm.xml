<odoo>
    <data>

        <!-- Form -->
        <record id="view_ozon_profitability_norm_form" model="ir.ui.view">
            <field name="name">Ожидаемая доходность</field>
            <field name="model">ozon.profitability_norm</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="value" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_profitability_norm_tree" model="ir.ui.view">
            <field name="name">Ожидаемая доходность</field>
            <field name="model">ozon.profitability_norm</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="value" />
                </tree>
            </field>

        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_profitability_norm">
            <field name="name">Ожидаемая доходность</field>
            <field name="res_model">ozon.profitability_norm</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Ожидаемая доходность"
            id="menu_profitability_norm"
            parent="main_menu_dicts"
            action="action_profitability_norm"
            sequence="3" />


        <!-- Profitability norm wizard form -->
        <record id="wizard_view_profitability_norm_form" model="ir.ui.view">
            <field name="name">Назначить ожидаемую доходность</field>
            <field name="model">ozon.profitability_norm.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group class="oe_title">
                        <field name="profitability_norm" />
                    </group>
                    <footer>
                        <button string="Отмена" class="btn-secondary" special="cancel" />
                        <button name="change_profitability_norm" string="Изменить" type="object"
                            class="btn-primary" />
                    </footer>
                </form>
            </field>
        </record>


    </data>

</odoo>