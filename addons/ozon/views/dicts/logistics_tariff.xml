<odoo>
    <data>

        <!-- Form -->
        <record id="logistics_tariff_view_form" model="ir.ui.view">
            <field name="name">Тариф логистики</field>
            <field name="model">ozon.logistics_tariff</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <button type="object" name="create_if_not_exists"
                            string="Заполнить тарифы"
                            class="btn-outline-primary"
                        />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="logistics_tariff_view_tree" model="ir.ui.view">
            <field name="name">Тариф логистики</field>
            <field name="model">ozon.logistics_tariff</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_logistics_tariff">
            <field name="name">Тариф логистики</field>
            <field name="res_model">ozon.logistics_tariff</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Тарифы логистики"
            id="menu_logistics_tariff"
            parent="main_menu_dicts"
            action="action_logistics_tariff"
            sequence="7" />

    </data>
</odoo>