<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ozon_mass_data_import_view_form" model="ir.ui.view">
            <field name="name">ozon_mass_data_import.form</field>
            <field name="model">ozon.mass_data_import</field>
            <field name="arch" type="xml">
                <form string="Mass Data Imports">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_time" string="Дата запуска" readonly="1" />
                                <field name="finish_time" string="Время окончания" readonly="1" />
                                <field name="name" string="Наименование" readonly="1" />
                                <field name="state" string="Состояние" readonly="1" />
                                <field name="expected_quantity" string="Ожидаемых задач"
                                    readonly="1" />
                                <field name="executed_quantity" string="Выполненых задач"
                                    readonly="1" />
                            </group>
                            <notebook>
                                <page string="Логи">
                                    <field name="ozon_mass_data_import_log_ids" string="Логи" />
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_mass_data_import_view_tree" model="ir.ui.view">
            <field name="name">ozon_mass_data_import.tree</field>
            <field name="model">ozon.mass_data_import</field>
            <field name="arch" type="xml">
                <tree string="Отчеты" create="0" default_order="start_time desc">
                    <field name="start_time" string="Время запуска" readonly="1" />
                    <field name="finish_time" string="Время окончания" readonly="1" />
                    <field name="state" string="Состояние" readonly="1" />
                    <field name="name" string="Наименование" readonly="1" />
                    <field name="expected_quantity" string="Ожидаемых задач" readonly="1" />
                    <field name="executed_quantity" string="Выполненых задач" readonly="1" />
                </tree>
            </field>
        </record>

