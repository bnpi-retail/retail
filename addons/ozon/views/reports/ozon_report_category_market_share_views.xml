<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ozon_report_category_market_share_view_form" model="ir.ui.view">
            <field name="name">ozon_report_category_market_share.form</field>
            <field name="model">ozon.report_category_market_share</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="period_from" string="Период с" class="oe_inline" widget="date"
                                       readonly="1"/>
                                <field name="ozon_categories_id" string="Категория" class="oe_inline" readonly="1"/>
                            </group>
                            <group>
                                <field name="period_to" string="по" class="oe_inline" widjet="date" readonly="1"/>
                            </group>
                        </group>

                        <field name="ozon_report_competitor_category_share_ids">
                            <tree string="" editable="bottom">
                                <field name="place" string="#" readonly="1"/>
                                <field name="retail_seller_id" string="Продавец" readonly="1"/>
                                <field name="category_share" string="Доля в категории"/>
                                <field name="turnover" string="Оборот" readonly="1"/>
                                <field name="turnover_growth" string="Рост оборота"/>
                            </tree>
                        </field>
                        <notebook>
                            <page string="Товары конкурентов">
                                <field name="ozon_products_competitors_sale_ids">
                                    <tree string="Товары конкурентов"
                                          default_order="revenue_share_percentage desc">
                                        <field name="retail_seller_id" string="Продавец"/>
                                        <field name="name" string="Товар"/>
                                        <field name="orders_qty" string="Кол-во заказов"/>
                                        <field name="orders_avg_price" string="Средняя цена"/>
                                        <field name="orders_sum" string="Заказано на сумму"/>
                                        <field name="revenue_share_percentage"
                                               string="Доля среди представленных товаров, %"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_report_competitor_category_share_view_form" model="ir.ui.view">
            <field name="name">ozon_report_competitor_category_share.form</field>
            <field name="model">ozon.report.competitor_category_share</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="place" string="Место в категории" class="oe_inline" readonly="1"/>
                                <field name="retail_seller_id" string="Продавец" class="oe_inline" readonly="1"/>
                                <field name="category_share" string="Доля продавца в категории" class="oe_inline"
                                       readonly="1"/>
                                <field name="turnover" string="Оборот" class="oe_inline" readonly="1"/>
                                <field name="turnover_growth" string="Рост оборота" class="oe_inline" readonly="0"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_report_category_market_share_view_tree" model="ir.ui.view">
            <field name="name">ozon_report_category_market_share.tree</field>
            <field name="model">ozon.report_category_market_share</field>
            <field name="arch" type="xml">
                <tree string="Отчеты" create="0" default_order="create_date desc">
                    <field name="create_date" string="Дата создания" readonly="1"/>
                    <field name="ozon_categories_id" string="Категория" readonly="1"/>
                    <field name="period_from" string="За период с" readonly="1"/>
                    <field name="period_to" string="по" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.server" id="action_do_report_category_market_share">
            <field name="name">Рассчитать долю рынка товаров</field>
            <field name="model_id" ref="model_ozon_report_category_market_share"/>
            <field name="binding_model_id" ref="model_ozon_report_category_market_share"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_do_report_category_market_share()
            </field>
        </record>

        <record id="action_open_report_category_market_share" model="ir.actions.act_window">
            <field name="name">Отчеты по продажам и долям продаж конкурентов</field>
            <field name="res_model">ozon.report_category_market_share</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_report_category_market_share" name="Отчеты по продажам конкурентов"
                  parent="ozon.menu_categories"
                  action="action_open_report_category_market_share" sequence="36"/>

    </data>
</odoo>