<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ozon_report_interest_view_form" model="ir.ui.view">
            <field name="name">ozon_report_interest.form</field>
            <field name="model">ozon.report.interest</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="ozon_categories_id" string="Категория"/>

                                <field name="first_period" string="Первый период"
                                       attrs="{'invisible':[('ozon_categories_id','=',False)]}"
                                />
                                <field name="second_period" string="Второй период"
                                       attrs="{'invisible':[('ozon_categories_id','=',False)]}"
                                />
                            </group>
                            <button name="action_calculate_interest_report" string="do"
                                    type="object" class="btn btn-primary me-1"/>
                            <notebook>
                                <page string="Товары конкурентов">

                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_report_interest_view_tree" model="ir.ui.view">
            <field name="name">ozon_report_interest.tree</field>
            <field name="model">ozon.report.interest</field>
            <field name="arch" type="xml">
                <tree string="Отчеты" default_order="create_date desc">
                    <field name="create_date" string="Дата создания" readonly="1"/>
                    <field name="ozon_categories_id" string="Категория" readonly="1"/>
                    <field name="first_period" string="Первый период с" readonly="1"/>
                    <field name="first_period" string="по" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.server" id="action_calculate_interest_report">
            <field name="name">Рассчитать</field>
            <field name="model_id" ref="model_ozon_report_interest"/>
            <field name="binding_model_id" ref="model_ozon_report_interest"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_calculate_interest_report()
            </field>
        </record>

        <record id="action_open_ozon_report_interest" model="ir.actions.act_window">
            <field name="name">Отчеты по интересу к продуктам</field>
            <field name="res_model">ozon.report.interest</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_ozon_report_interest" name="Отчеты по интересу к продуктам"
                  parent="ozon.menu_categories"
                  action="action_open_ozon_report_interest" sequence="40"/>

    </data>
</odoo>