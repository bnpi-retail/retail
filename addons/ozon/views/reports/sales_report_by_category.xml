<odoo>
    <data>
        <record id="sales_report_by_category_view_form" model="ir.ui.view">
            <field name="name">sales_report_by_category.form</field>
            <field name="model">ozon.sales_report_by_category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" attrs="{'readonly':[('id','>', 0)]}" />
                                <field name="date_to" attrs="{'readonly':[('id','>', 0)]}" />
                                <field name="category_id" attrs="{'readonly':[('id','>', 0)]}" />
                            </group>
                            <group>
                                <group>
                                    <field name="revenue" attrs="{'invisible':[('id','=',False)]}"
                                        decoration-bf="True" />
                                    <field name="total_expenses"
                                        attrs="{'invisible':[('id','=',False)]}"
                                        decoration-bf="True" />
                                    <field name="profit" attrs="{'invisible':[('id','=',False)]}"
                                        decoration-success="profit>0"
                                        decoration-danger="total_expenses>revenue"
                                        decoration-bf="True" />
                                </group>
                                <group>
                                    <field name="products_count"
                                        attrs="{'invisible':[('id','=',False)]}" />
                                    <field name="sales_count"
                                        attrs="{'invisible':[('id','=',False)]}" />
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <page id="page_total_expenses" string="Суммарные статьи">
                                <field name="transaction_unit_summary_ids"
                                    attrs="{'invisible':[('id','=',False)]}">
                                    <tree>
                                        <field name="name" />
                                        <field name="count" />
                                        <field name="value" />
                                        <field name="percent" widget="percentage" />
                                    </tree>
                                </field>
                            </page>
                            <!-- <page id="page_products" string="Информация о товарах">
                                <field name="product_in_sales_report_ids">
                                    <tree limit="3000">
                                        <field name="product_id" />
                                        <field name="sales_count" sum="1" />
                                        <field name="revenue" sum="1" />
                                        <field name="total_expenses" sum="1" />
                                        <field name="profit" sum="1" />
                                    </tree>
                                </field>
                            </page> -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sales_report_by_category_view_tree" model="ir.ui.view">
            <field name="name">sales_report_by_category.tree</field>
            <field name="model">ozon.sales_report_by_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="category_id" />
                    <field name="date_from" />
                    <field name="date_to" />
                </tree>
            </field>
        </record>


        <!-- Form - Product in sales report -->
        <record id="product_in_sales_report_view_form" model="ir.ui.view">
            <field name="name">product_in_sales_report.form</field>
            <field name="model">ozon.product_in_sales_report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="product_id" />
                        </group>
                        <group>
                            <field name="sales_count" />
                        </group>
                        <field name="prod_expenses_in_sales_report_ids">
                            <tree>
                                <field name="expenses_item_id" />
                                <field name="expense" sum="1" />
                                <field name="total_expense" sum="1" />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>


        <record id="action_sales_report_by_category" model="ir.actions.act_window">
            <field name="name">Отчёт по продажам категории</field>
            <field name="res_model">ozon.sales_report_by_category</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

    </data>
</odoo>