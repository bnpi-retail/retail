<odoo>
    <data>
        <record id="sales_report_by_category_view_form" model="ir.ui.view">
            <field name="name">sales_report_by_category.form</field>
            <field name="model">ozon.sales_report_by_category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="object"
                                name="open_pivot_view_revenue_by_product"
                                string="Выручка"
                                attrs="{'invisible':[('id','=',False)]}" />
                            <button class="oe_stat_button" type="object"
                                name="open_pivot_view_expenses_by_product"
                                string="Затраты"
                                attrs="{'invisible':[('id','=',False)]}" />
                        </div>
                        <group>
                            <group>
                                <field name="date_from" attrs="{'readonly':[('id','>', 0)]}" />
                                <field name="date_to" attrs="{'readonly':[('id','>', 0)]}" />
                                <field name="category_id" attrs="{'readonly':[('id','>', 0)]}" />
                            </group>
                            <group>
                                <group>
                                    <field name="revenue" attrs="{'invisible':[('id','=',False)]}"
                                        decoration-bf="True" />
                                    <field name="total_expenses"
                                        attrs="{'invisible':[('id','=',False)]}"
                                        decoration-bf="True" />
                                    <field name="profit" attrs="{'invisible':[('id','=',False)]}"
                                        decoration-success="profit>0"
                                        decoration-danger="total_expenses>revenue"
                                        decoration-bf="True" />
                                </group>
                                <group>
                                    <field name="products_count"
                                        attrs="{'invisible':[('id','=',False)]}" />
                                    <field name="sales_count"
                                        attrs="{'invisible':[('id','=',False)]}" />
                                </group>
                            </group>
                        </group>
                        <field name="expenses_by_category_ids"
                            attrs="{'invisible':[('id','=',False)]}">
                            <tree>
                                <field name="expenses_item_id" />
                                <field name="expense" />
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sales_report_by_category_view_tree" model="ir.ui.view">
            <field name="name">sales_report_by_category.tree</field>
            <field name="model">ozon.sales_report_by_category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="category_id" />
                    <field name="date_from" />
                    <field name="date_to" />
                </tree>
            </field>
        </record>

        <record id="prod_in_expenses_by_cat_view_pivot" model="ir.ui.view">
            <field name="name">prod_expenses_in_sales_report.pivot</field>
            <field name="model">ozon.prod_expenses_in_sales_report</field>
            <field name="arch" type="xml">
                <pivot disable_linking="1">
                    <field name="product_id" type="row" />
                    <field name="expenses_item_id" type="col" />
                    <field name="expense" type="measure" />
                </pivot>
            </field>
        </record>

        <record id="product_in_sales_report_view_pivot" model="ir.ui.view">
            <field name="name">product_in_sales_report.pivot</field>
            <field name="model">ozon.product_in_sales_report</field>
            <field name="arch" type="xml">
                <pivot disable_linking="1">
                    <field name="product_id" type="row" />
                    <field name="sales_count" type="measure" />
                    <field name="revenue" type="measure" />
                    <field name="total_expenses" type="measure" />
                </pivot>
            </field>
        </record>

        <record id="action_sales_report_by_category" model="ir.actions.act_window">
            <field name="name">Отчёт по продажам категории</field>
            <field name="res_model">ozon.sales_report_by_category</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem id="menu_sales_report_by_category" name="Отчеты по продажам категории"
            parent="ozon.menu_reports"
            action="action_sales_report_by_category" sequence="2" />


    </data>
</odoo>