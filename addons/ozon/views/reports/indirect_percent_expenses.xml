<odoo>
    <data>

        <!-- Form -->
        <record id="view_indirect_percent_expenses_form" model="ir.ui.view">
            <field name="name">Отчёт о выплатах</field>
            <field name="model">ozon.indirect_percent_expenses</field>
            <field name="arch" type="xml">
                <form>
                    <div name="button_box" position="inside">
                        <button string="Подробнее" class="oe_stat_button" type="object"
                            name="open_transaction_unit_view" />
                    </div>
                    <group style="margin-top: 20px; margin-bottom: 20px;">
                        <field name="timestamp" style="margin-bottom: 20px;" />
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                    <notebook>
                        <page id="totals" string="Общие данные">
                            <group>
                                <group string="Фактические значения">
                                    <field name="revenue" />
                                    <field name="total" />
                                    <field name="orders" />
                                    <field name="reward" />
                                    <field name="processing_delivery" />
                                    <field name="returns_cancels" />
                                    <field name="services" />
                                    <field name="transfer" />
                                    <field name="compensation" />
                                    <field name="other_total" />
                                </group>
                                <group string="Теоретические значения">
                                    <field name="theory_processing_delivery" />
                                    <field name="theory_acquiring" />
                                </group>
                            </group>
                            <group>
                                <field name="transaction_unit_summary_ids">
                                    <tree>
                                        <field name="name" />
                                        <field name="count" />
                                        <field name="percent" widget="percentage" />
                                        <field name="value" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_indirect_percent_expenses_tree" model="ir.ui.view">
            <field name="name">Отчёт о выплатах</field>
            <field name="model">ozon.indirect_percent_expenses</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="timestamp" />
                    <field name="date_from" />
                    <field name="date_to" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_indirect_percent_expenses">
            <field name="name">Отчёт о выплатах</field>
            <field name="res_model">ozon.indirect_percent_expenses</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Отчёт о выплатах"
            id="menu_indirect_percent_expenses"
            parent="main_menu_reports"
            action="action_indirect_percent_expenses"
            sequence="1" />

    </data>
</odoo>