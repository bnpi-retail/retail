<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ozon_abc_analysis_view_form" model="ir.ui.view">
            <field name="name">ozon_abc_analysis.form</field>
            <field name="model">ozon.abc_analysis</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="period_from" string="Период с" class="oe_inline" widget="date"/>
                                <field name="ozon_categories_id" string="Категория" class="oe_inline"/>
                                <button name="action_do_abc_analysis" type="object"
                                        attrs="{'invisible':[('done','=',True)]}"
                                        string="Провести анализ"
                                        class="oe_highlight"/>
                            </group>
                            <group>
                                <field name="period_to" string="по" class="oe_inline" widjet="date"/>
                            </group>
                            <field name="ozon_products_ids" attrs="{'invisible':[('ozon_products_ids','=',[])]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ozon_abc_analysis_view_tree" model="ir.ui.view">
            <field name="name">ozon_abc_analysis.tree</field>
            <field name="model">ozon.abc_analysis</field>
            <field name="arch" type="xml">
                <tree string="ABC анализ">
                    <field name="ozon_categories_id" string="Категория"/>
                    <field name="period_from" string="Начало периода"/>
                    <field name="period_to" string="Конец периода"/>
                </tree>
            </field>
        </record>

        <record id="action_open_ozon_abc_analysis" model="ir.actions.act_window">
            <field name="name">ABC Анализ</field>
            <field name="res_model">ozon.abc_analysis</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_ozon_abc_analysis" name="ABC Анализ" parent="menu_categories"
                  action="action_open_ozon_abc_analysis" sequence="35"/>

    </data>
</odoo>
