<odoo>
    <data>
        <!-- Tree -->
        <record id="view_supplementary_categories_tree" model="ir.ui.view">
            <field name="name">Вспомогательные категории</field>
            <field name="model">ozon.supplementary_categories</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_supplementary_categories">
            <field name="name">Вспомогательные категории</field>
            <field name="res_model">ozon.supplementary_categories</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Вспомогательные категории"
            id="menu_supplementary_categories"
            parent="menu_categories"
            action="action_supplementary_categories"
            sequence="25" />

    </data>
</odoo>