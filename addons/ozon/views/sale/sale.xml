<odoo>
    <data>

        <!-- Graph -->
        <record id="view_sale_graph" model="ir.ui.view">
            <field name="name">Продажи товара</field>
            <field name="model">ozon.sale</field>
            <field name="arch" type="xml">
                <graph string="Продажи товара" type="line">
                    <field name="qty" type="measure"/>
                    <field interval="day" name="date" type="datetime"/>
                </graph>
            </field>
        </record>

        <!-- Form -->
        <record id="view_sale_form" model="ir.ui.view">
            <field name="name">Продажи товара</field>
            <field name="model">ozon.sale</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Продажа товара">
                        <field name="date" />
                        <field name="product">
                            <tree>
                                <field name="products">
                                    <tree>
                                        <field name="name"></field>
                                    </tree>
                                </field>
                            </tree>
                        </field>
                        <field name="qty" />
                        <field name="revenue" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_sale_tree" model="ir.ui.view">
            <field name="name">Продажи товара</field>
            <field name="model">ozon.sale</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date" />
                    <field name="product">
                        <tree>
                            <field name="id_on_platform" />
                        </tree>
                    </field>
                    <field name="qty" />
                    <field name="revenue" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_sale">
            <field name="name">Продажи товаров</field>
            <field name="res_model">ozon.sale</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{"graph_mode": "line", "measure": "revenue"}</field>
        </record>

        <!-- Menu -->
        <menuitem name="Продажи товаров"
            id="menu_sale"
            parent="ozon.menu_root"
            action="action_sale"
            sequence="38" />

    </data>
</odoo>