<odoo>
    <data>

        <!-- Form -->
        <record id="ozon_mass_calculator_form" model="ir.ui.view">
            <field name="name">Массовый калькулятор</field>
            <field name="model">ozon.mass_calculator</field>
            <field name="arch" type="xml">
                <form>
                    <div name="button_box" position="inside">
                        <button string="Калькулятор" class="oe_stat_button" type="object"
                            name="open_mass_calculator" />
                    </div>
                    <group>
                        <field name="category_id" />
                        <field name="draft_product_ids">
                            <tree>
                                <field name="article" />
                                <field name="name" />
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="ozon_mass_calculator_tree" model="ir.ui.view">
            <field name="name">Массовый калькулятор</field>
            <field name="model">ozon.mass_calculator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="category_id" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_mass_calculator">
            <field name="name">Массовый калькулятор</field>
            <field name="res_model">ozon.mass_calculator</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>

</odoo>