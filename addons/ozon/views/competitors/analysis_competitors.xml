<odoo>
    <data>

        <!-- Form -->
        <record id="view_analysis_competitors_record_form" model="ir.ui.view">
            <field name="name">Анализ конкурента</field>
            <field name="model">ozon.analysis_competitors_record</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Место объявления">
                        <field name="number" />
                    </group>
                    <group string="Наименование и запрос">
                        <field name="name" />
                    </group>
                    <group string="Цены">
                        <field name="price_with_card" />
                        <field name="price" />
                        <field name="price_without_sale" />
                    </group>
                    <group string="Объявление">
                        <field name="ad" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_analysis_competitors_record_tree" model="ir.ui.view">
            <field name="name">Анализ конкурента</field>
            <field name="model">ozon.analysis_competitors_record</field>
            <field name="arch" type="xml">
                <tree limit="30">
                    <field name="number" />
                    <field name="name" />
                    <field name="price_with_card" />
                    <field name="price" />
                    <field name="price_without_sale" />
                    <field name="is_my_product" />
                    <field name="ad" />
                </tree>
            </field>
        </record>

        <!-- Form -->
        <record id="view_analysis_competitors_form" model="ir.ui.view">
            <field name="name">Анализ конкурентов</field>
            <field name="model">ozon.analysis_competitors</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Дата">
                        <field name="timestamp" />
                    </group>
                    <group>
                        <field name="search_query" />
                        <field name="worker" />
                    </group>

                    <separator string="Объявления" />
                    <field name="competitor_record" widget="kanban">
                        <kanban class="oe_kanban_global_click">
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_card">
                                        <div style="display: block;"> Номер: <field name="number" />
                                        </div>
                                        <div style="display: block;"> Наименование: <field
                                                name="name" />
                                        </div>
                                        <div style="display: block;"> Наш продукт: <field
                                                name="is_my_product" />
                                        </div>
                                        <div style="display: block;"> Цена с картой: <field
                                                name="price_with_card" />
                                        </div>
                                        <div style="display: block;"> Цена: <field name="price" />
                                        </div>
                                        <div style="display: block;"> Цена без скидки: <field
                                                name="price_without_sale" />
                                        </div>
                                        <div style="display: block;"> Объявление: <field name="ad" />
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>

                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_analysis_competitors_tree" model="ir.ui.view">
            <field name="name">Анализ конкурентов</field>
            <field name="model">ozon.analysis_competitors</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="timestamp" />
                    <field name="competitor_record" widget="one2many_pills">
                        <tree>
                            <field name="number" />
                            <field name="price" />
                        </tree>
                    </field>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_analysis_competitors">
            <field name="name">Анализ конкурентов</field>
            <field name="res_model">ozon.analysis_competitors</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

    </data>
</odoo>