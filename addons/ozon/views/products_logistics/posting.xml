<odoo>
    <data>
        <!-- Form -->
        <record id="view_posting_form" model="ir.ui.view">
            <field name="name">Отправление Ozon</field>
            <field name="model">ozon.posting</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="in_process_at" />
                            <field name="trading_scheme" />
                            <field name="posting_number" />
                            <field name="order_number" />
                            <field name="order_id" />
                            <field name="status" widget="badge"
                                decoration-success="status=='delivered'"
                                decoration-danger="status=='cancelled'" />
                            <field name="skus" />
                            <field name="product_ids" />
                            <field name="region" />
                            <field name="city" />
                            <field name="warehouse_id" />
                            <field name="cluster_from" />
                            <field name="cluster_to" />
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="posting_product_ids">
                                    <tree>
                                        <field name="ozon_products_id" />
                                        <field name="sku" />
                                        <field name="offer_id" />
                                        <field name="price" />
                                        <field name="quantity" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_posting_tree" model="ir.ui.view">
            <field name="name">Отправление Ozon</field>
            <field name="model">ozon.posting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="in_process_at" />
                    <field name="posting_number" />
                    <field name="status" widget="badge" decoration-success="status=='delivered'"
                        decoration-danger="status=='cancelled'" />
                    <field name="region" />
                    <field name="city" />
                    <field name="warehouse_id" />
                    <field name="cluster_from" />
                    <field name="cluster_to" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_postings_ozon">
            <field name="name">Отправления Ozon</field>
            <field name="res_model">ozon.posting</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Отправления Ozon"
            id="menu_postings_ozon"
            parent="main_menu_products_logistics"
            action="action_postings_ozon"
            sequence="1" />

    </data>
</odoo>