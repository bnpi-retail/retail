<odoo>
    <data>

        <!-- Form -->
        <record id="view_retail_settings_form" model="ir.ui.view">
            <field name="name">Настройки</field>
            <field name="model">retail.settings</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Продажа товара">
                        <field name="name" />
                        <field name="value" password="True" />
                    </group>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_retail_settings_tree" model="ir.ui.view">
            <field name="name">Настройки</field>
            <field name="model">retail.settings</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="value" password="True" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_retail_settings">
            <field name="name">Настройки</field>
            <field name="res_model">retail.settings</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Настройки"
            id="menu_retail_settings"
            parent="retail.menu_root"
            action="action_retail_settings"
            sequence="60" />

    </data>
</odoo>