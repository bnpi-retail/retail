<odoo>
    <data>

        <!-- Form -->
         <record id="retail_seller_view_form" model="ir.ui.view">
            <field name="name">retail.seller.form</field>
            <field name="model">retail.seller</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="trade_name"/>
                                <field name="ogrn"/>
                            </group>
                            <group>
                                <field name="tax"/>
                                <field name="tax_percent"/>
                                <field name="tax_description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="view_seller_tree" model="ir.ui.view">
            <field name="name">Продавец</field>
            <field name="model">retail.seller</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" width="150"/>
                    <field name="trade_name" width="150"/>
                    <field name="ogrn" width="150"/>
                    <field name="tax" width="150"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_seller">
            <field name="name">Продавец</field>
            <field name="res_model">retail.seller</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem name="Продавец"
            id="menu_seller"
            parent="retail.menu_root"
            action="action_seller"
            sequence="30" />

    </data>
</odoo>